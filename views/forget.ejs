<!doctype html>
<html lang="en">
  <head>
    
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<style>

.container1{
  height:100%;
  width: 100%;
  margin:0px; 
}

.menubar{
    width:100%;
    height:50px;
    margin-top:0px;
    margin-left:0px;
    background-color:darkturquoise;
    position: relative;
    z-index:1;
}

.content{
   margin-top:300px;
   text-align: center;
   margin-left:650px;
   margin-right:auto;
   position: absolute;
   z-index:1;
}

#signup{
    z-index:3;
    margin-top:200px;
    margin-left:600px;
    margin-right:auto;
    height:auto;
    width:600px; 
    background-color: azure;
    padding:10px;
    position: absolute;
}

#detail{
    padding-left:2px;
    width:570px;
}  
      
      
</style>
      
    
<title>Login</title>

</head>
    
    
<body>
      
<div class="container1"> 
    
 <div class="menubar">   
 <div class="btn-group btn-group-lg" role="group" aria-label="Basic example" style="color: aliceblue">
 <button id="1" type="button" class="btn btn-primary" style="margin-left: 5px" onclick=" window.location.href='http://localhost:3000/'">Online Notes</button>
 <input id="2" type="button" class="btn btn-primary" style="float:left" onclick=" window.location.href='http://localhost:3000/welcome'" value="Home">
 <input id="3" type="button" class="btn btn-primary" style="float:left" value="Help"onclick=" window.location.href='http://localhost:3000/help'">
 <input id="4" type="button" class="btn btn-primary"  value="Contact" onclick=" window.location.href='http://localhost:3000/contact'">
 <input id="6" type="button" class="btn btn-primary" style="margin-right:1155px;background-color:#8B0000" value="ResetPassword">
 <input id="5" type="button" class="btn btn-primary" style="float: right" value="Login" onclick=" window.location.href='http://localhost:3000/login'" />
 </div>
 </div> 
    

 <div id="signup">
 <div>
 <button id="7" type="button" style="float: right"  name="cancel" >*</button>
 <br>
 <p style="font-size: 20px">Forget paassword</p>
 <%- include('partials/success1') %>
 <hr>
 </div> 
 <form method="post" action="/forget" >
 <input id="detail" type="email" name="email" placeholder="Email Address" value="<%= typeof email!='undefined' ? email:'' %> "/>
 <br>
     <p style="float:right"><a href ="/forget">Forget Password</a></p>   
 <br>  
 <hr>
 <input  type="submit" name="Cancel" style="float: right" value="Cancel" class="btn btn-outline-dark"  onclick="window.location.href = 'http://localhost:3000/forget'"/> 
 <input  class="btn btn-primary" type="submit" style="margin-left:330px" name="Sign up" value="Submit"/> 
 <!--button style="float:left" type="button" class="btn btn-outline-dark" > <a href ="register" style="color:#000000">Register</a></button>-->
  <input style="float:left" type="button" class="btn btn-outline-dark" onclick="window.location.href = 'http://localhost:3000/register'" value="Regsiter" />
 </form>            
 </div>
    
 </div>
          
   
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
      
     <script>

      $("body").not(document.getElementById("#signup")).css("background-color" , "darkgrey");
      $(function(){
          $("#7").click(function(){
            $("#signup").hide();  
          })
      });
      
    </script>
      
    </body>
    
</html>











