<style>
    
body{
background-image:linear-gradient(to top, #9795f0 0%, #fbc8d4 100%);
animation-name:body;
animation-delay:0s;
animation-duration:2s;
}
    
@keyframes body{
    0%{ opacity:0;}
    20%{ opacity:20;}
    40%{ opacity:40;}
    60%{ opacity:60;}
    80%{ opacity:80;}
    100%{ opacity:100;}
}

.container1{
  height:20%;
  width: 100%;
  margin:0px; 
}

.menubar{
    width:100%;
    height:50px;
    margin-top:0px;
    margin-left:0px;
    background-color:darkturquoise;
    position: relative;
    z-index:1;
    padding:0px;
}



.signup{
    z-index:3;
    margin-top:200px;
    margin-left:600px;
    margin-right:auto;
    height:auto;
    width:600px; 
    background-color: azure;
    padding:10px;
    position: absolute;
}

#detail{
    padding-left:2px;
    width:570px;
}
    
#six{
 transition:transform 600ms ease-in-out;    
 padding-left:auto;
 padding-right:auto;
 margin-left:830px;
 position:absolute;
 margin-top:405px;
 animation-name:name2;
 animation-delay:0s;
 animation-timing-function:ease-in-out;
 animation-duration:1s;

}

@keyframes name2{
  from{transform:rotate(0deg);opacity:0;}
  to{transform:rotate(359deg);opacity:100;}
}
    
#six:hover{
transform:rotateY(180deg);  
}
    
#logo{
 text-align:center;
 margin-top:276px;
 margin-left:660px;
 margin-bottom:0px;
 animation-name:name; 
 animation-delay:0s;
 animation-duration:1s;
 animation-timing-function:ease-in;
 position:absolute;
}
  
@keyframes name{
  from{transform:rotate(0deg);opacity:0;}
  to{transform:rotate(359deg);opacity:100;}
}
    
#reason{
margin-left:660px;
margin-top:360px;
font-size:2em;
position:absolute;
margin-top:360px;
animation-name:name1;
animation-delay:0s;
animation-duration:1s;
}

    
 @keyframes name1{
  from{transform:rotate(0deg);opacity:0;}
  to{transform:rotate(359deg);opacity:100;}
}

      
      
