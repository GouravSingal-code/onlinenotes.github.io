 <input  class="btn btn-primary" type="submit" style="margin-left:320px" name="Sign up" value="Login"/> 
 <!--<button style="float:left" type="button" class="btn btn-outline-dark" > <a href ="register" style="color:#000000">Register</a></button>-->
 <input style="float:left;font-family:solid;color:#FFFFFF" type="button" class="btn btn-outline-dark" onclick="window.location.href = 'http://localhost:3000/register'" value="Regsiter" />
 </form>            
 </div>
 

          
          
