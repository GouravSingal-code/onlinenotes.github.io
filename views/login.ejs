 <input id="4" type="button" class="btn btn-primary" style="margin-right:1330px" value="Contact"onclick=" window.location.href='http://localhost:3000/contact'">
 <input id="5" type="button" class="btn btn-primary" style="float:right;background-color:#8B0000" value="Login" onclick=" window.location.href='http://localhost:3000/login'"/>
 </div>
 </div>  
 
 <%- include('partials/login_messages') %>
 <div id="signup">
 <div>
 <br>
 <p style="font-size: 20px;text-align:center;font-size:2em  ;  font-weight:bold;">Login:</p>

 <hr style="font-size:1.2em">
 </div> 
 <form method="post" action="/login" >
 <label for="detail1" id="one" style="font-size:1.4em;top:110px;position:absolute ;font-weight:bold;">Email:</label>
 <input id="detail1" type="email" name="email" />
 <br>
 <br>
 <label for="detail2" id="two" style="font-size:1.4em;top:170px;position:absolute;    font-weight:bold;">Password:</label>
 <input id="detail2" type="password" name="password"  />
 <br>
 <br>
     <p style="float:right;font-size:1.1em"><a href ="/forget">Forget Password</a></p>   
