    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
      
     <script>

      var detail1= document.getElementById("detail1");
      var label1= document.getElementById("one");
      
    
      detail1.onfocus=function(){
       
          var y=110;
          var counter2 = setInterval(function(){
            if( y==95 ){
                clearInterval(counter2);
            }     
            label1.style.top=y+'px';
            y--;
          }, 5 );
      }
         

      var detail2= document.getElementById("detail2");
      var label2= document.getElementById("two");
         
      detail2.onfocus=function(){

          var y=170;
          var counter2 = setInterval(function(){
            if( y==155 ){
                clearInterval(counter2);
            }     
            label2.style.top=y+'px';
            y--;
          }, 5 );
      }
         
         

      $(function(){
          $("#7").click(function(){
            $("#signup").hide();  
          })
      });
      
    </script>
      
    </body>
    
</html>











